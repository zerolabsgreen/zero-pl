{
  "name": "zero-protocol-labs",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "nx": "nx",
    "clean": "rm -rf node_modules dist",
    "start": "concurrently --names 'FRONTEND,BACKEND,ISSUER_API' -c 'yellow,cyan'  'yarn serve:frontend' 'yarn serve:backend' 'yarn serve:issuer-api'",
    "serve:backend": "nx serve backend",
    "serve:issuer-api": "PORT=$(grep ISSUER_API_PORT .env | cut -d \"=\" -f2 | tr -d '\"') DATABASE_URL=$(grep ISSUER_DATABASE_URL .env | cut -d \"=\" -f2 | tr -d '\"') nx serve issuer-api",
    "serve:frontend": "chmod +x ./dev-env.sh && ./dev-env.sh && nx serve frontend --port=3000",
    "start:no-frontend": "concurrently --names 'BACKEND,ISSUER_API' -c 'yellow,cyan' 'yarn serve:backend' 'yarn serve:issuer-api'",
    "build": "yarn swagger:schema:generate && yarn build:api-client && cp apps/frontend/src/index.html.template apps/frontend/src/index.html  && nx run-many --target=build --projects=backend,frontend,issuer-api --parallel",
    "build:prod": "yarn swagger:schema:generate && yarn build:api-client && cp apps/frontend/src/index.html.template apps/frontend/src/index.html  && nx run-many --target=build --projects=backend,frontend,issuer-api --parallel --prod",
    "build:docker": "yarn build:prod && nx run-many --target=docker-image-build --projects=backend,frontend,issuer-api",
    "test": "nx test",
    "lint": "nx workspace-lint && nx lint",
    "e2e": "nx e2e",
    "affected:apps": "nx affected:apps",
    "affected:libs": "nx affected:libs",
    "affected:build": "nx affected:build",
    "affected:e2e": "nx affected:e2e",
    "affected:test": "nx affected:test",
    "affected:lint": "nx affected:lint",
    "affected:dep-graph": "nx affected:dep-graph",
    "affected": "nx affected",
    "format": "nx format:write",
    "format:write": "nx format:write",
    "format:check": "nx format:check",
    "update": "nx migrate latest",
    "workspace-generator": "nx workspace-generator",
    "dep-graph": "nx dep-graph",
    "help": "nx help",
    "db:migrate:generate": "prisma generate",
    "db:migrate:reset": "prisma migrate reset",
    "db:migrate:ci": "prisma migrate reset --skip-generate --skip-seed --force",
    "db:migrate:deploy": "prisma migrate deploy",
    "swagger:schema:generate": "cd apps/backend && REDIS_HOST= ISSUER_CHAIN_ADDRESS=foobar DATABASE_URL=postgresql://localhost:5432 TS_NODE_PROJECT=tsconfig.app.json ts-node src/generateSchema.ts",
    "build:api-client": "cd libs/api-client && yarn build",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migrate:issuer-api": "yarn typeorm migration:run --config apps/issuer-api/ormconfig.ts",
    "migrate:all": "yarn migrate:issuer-api && yarn db:migrate:deploy",
    "seed:all:dev": "./seed-dev.sh"
  },
  "private": true,
